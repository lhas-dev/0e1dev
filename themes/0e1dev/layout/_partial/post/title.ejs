<% if (post.link){ %>
  <h2 class="title is-4">
    <a class="has-text-dark <%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h2>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h2 class="title is-4">
      <a class="has-text-dark <%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title %></a>
    </h2>
  <% } else { %>
    <h2 class="title is-4 has-text-dark <%= class_name %>" itemprop="name">
      <%= post.title %>
    </h2>
  <% } %>
<% } %>